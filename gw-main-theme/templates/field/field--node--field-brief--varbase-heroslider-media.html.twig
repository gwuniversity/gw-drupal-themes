{#
/**
 * @file
 * Overrides short description for Varbase Hero Slider
 * @see field.html.twig
 */
#}
{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
  ]
%}
<span{{ attributes.addClass(classes) }}>
  {%- for item in items -%}

    <em>
      {{ item.content }}
    </em>

  {%- endfor -%}
</span>
