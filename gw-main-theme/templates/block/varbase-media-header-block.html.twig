<div class="container">
  <div class="row">
    <div class="vmh-content">
      {# System Page breadcrumbs #}
        <div class="vmh-breadcrumb">{{ vmh_page_breadcrumbs }}</div>
    </div>
  </div>
</div>

<div class="vmh-container">

  <div class="vmh-content-wrapper">
    <div class="container">
      <div class="row">
        <div class="vmh-content bp-image-container">

          {% if show_header_info %}

            <div class="bp-image-container-bg">
              <div class="{{ alignment }}">
                <h2 class="advancedHeroTitle">{{ vmh_page_title }}</h2>
                <p class="hero-description">{{ header_summary }}</p>
              </div>
            </div>

          {% endif %}

        </div>
      </div>
    </div>
  </div>

  <div class="vmh-background">
    {# Background media #}
    {% if vmh_background_media %}
      {{ vmh_background_media }}
    {% endif %}
  </div>

</div>

{% else %}

<div></div>

{% endif %}
